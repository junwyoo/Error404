<head>
    <style type="text/css">
        .title-box {
            padding: 10px 15px 10px 15px;
        }
        .writable {
            width: 800px;
            height: 640px;
        }
    </style>
</head>
<body>
<div class='writing-form'>

    
    <form action="/upload_image" method="POST" enctype="multipart/form-data">
        <div class="write title">
            <%= text_field_tag :my_title %>
        </div>
        <div class="note editing-area">
            <%= text_area_tag :my_text %>
        </div>
        <input type="file" name="my_image"><br>
        <input type="submit">

    </form>
    
    
</div>


</body>