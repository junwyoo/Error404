<head>
        <link rel="stylesheet" href="https://www.w3schools.com/lib/w3.css">
        <link href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' rel="stylesheet"/>
        <link href="https://fonts.googleapis.com/css?family=Dosis|Poppins" rel="stylesheet">
    <style>

        #navbar{
            width: 100%;
            height: 30%;
            background: #fce6eb;
            
        }
        .hall {
            text-decoration: none;
            padding-top: 150px;
        }
        .hihi {
            font: arial;
            float: center;
            background-color: #fce6eb;
            font-family: 'Dosis';
            font-style: bold;
        }
        .bye {
            font: arial;
            background-color: #fce6eb;
            float: center;
            font-family: 'Poppins';
        }
        .w3-button {
            background-color: #fce6eb;
        }

    </style>
</head>
    
<body>

     <center>
        <div id="navbar">
            <div class="hihi">
            <a href="/home/main" class="w3-bar-item w3-button w3-#fce6eb"><font size="7" color="FF7292"><b>Between</b></font></a>
            </div>
            <div class="bye">
            <a href="/home/best" class="w3-bar-item w3-button w3-#fce6eb"><font size="6">Best</font></a>
            <a href="/home/out_of_league" class="w3-bar-item w3-button w3-#fce6eb"><font size="6">Out of League</font></a>
            <a href="/home/upload" class="w3-bar-item w3-button w3-#fce6eb"><font size="6">Story</font></a>
            <a href="/home/board" class="w3-bar-item w3-button w3-#fce6eb"><font size="6">Diary</font></a>
            </div>
        </div>
     </center>
     

        <div class='writing result'>
            <% @boarders.each do |bd|%>
                <div class="panel-group" id="accordion">
                    <div class="panel panel-default">
                        <div class="panel-heading" style="margin-top: 20px;">
                          <p class="panel-title" style="color: #ff7292; font-size: 18px;">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">
                            <%=bd.board_title%> </a>
                          </p>
                        </div>
                        <div id="collapse1" class="panel-collapse collapse in">
                          <div class="panel-body">
                              <p><%=bd.board_content%></p>
                          </div>
                        </div>
                    </div>
                </div>
            <%end%> 
            
        </div>    
        
     <center><a href="/home/board_write" class='press'> <img src="/images/buttonbox.png" alt = "button" class='press'></a></center>
       
    
</body>
